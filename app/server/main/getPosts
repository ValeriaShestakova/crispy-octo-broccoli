Code procedure in vk api


var ITERS = 25;

var COUNT = 100;

var posts = [];
var req_params = {
        "owner_id" : Args.id,
        "offset" : 0,
        "count"  : COUNT,
        "v" : "5.52"
};
var i = 0;
while(i < ITERS) {
    req_params.offset = i*COUNT + ITERS*COUNT*Args.offset;

    var items = API.wall.get(req_params).items;

    if (items.length == 0) {
        return posts;
    }

    posts.push(items);
    i = i + 1;
}
return posts;
